{
  "version": 2,
  "builds": [
    {
      "src": "backend/api/app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "functions": {
    "backend/api/app.py": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/rooms(/.*)?",
      "dest": "/backend/api/app.py"
    },
    {
      "src": "/activities(/.*)?",
      "dest": "/backend/api/app.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
